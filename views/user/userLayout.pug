extends ../layout

//- /handle/ = profile = found user || user = logged in user

block content
  .user-banner
    if(profile.bannerImage)
      img(src=`${profile.bannerImage}`).user-banner__image
    else 
      .user-banner__image
    .user-banner__nav
      .content
        .flex-container
          .flex-container__item
            img(width="200" src=`${profile.avatar ? '/uploads/' + profile.avatar : '/images/avatar/user.jpg'}`).user-banner__user-image
          .flex-container__item
            ul.user-banner__nav-list
              li.user-banner__nav-item
                a.user-banner__nav-link.hover-highlight(href=`${profile.handle}/following`)
                  span.user-banner__nav-title Following
                  span.user-banner__nav-value= profile.following.length
              li.user-banner__nav-item
                a.user-banner__nav-link.hover-highlight(href=`${profile.handle}/followers`)
                  span.user-banner__nav-title Followers
                  span.user-banner__nav-value= profile.followers.length
              li.user-banner__nav-item
                a.user-banner__nav-link.hover-highlight(href=`${profile.handle}/likes`)
                  span.user-banner__nav-title Likes
                  span.user-banner__nav-value= profile.likes
          .flex-container__item
            button.user-banner__edit-btn Edit profile
  .content
    .flex-container
      .flex-container__item
        .user-info
          a(href=`/${profile.handle}`).user-info__link.user-info__name= profile.name
          a(href=`/${profile.handle}`).user-info__link.user-info__handle
            | @
            span.user-info__handle--name= profile.handle
          p.user-info__bio= profile.bio || "Test Bio"
          span.user-info__joined
            i.fa.fa-calendar
            - const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            |  Joined #{monthNames[profile.joined.getMonth()]} #{profile.joined.getFullYear()}
      block content
